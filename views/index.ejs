<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener By Skill Edge</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <link
      rel="icon"
      type="image/png"
      sizes="96x96"
      href="https://se-short.vercel.app/favicon/favicon-96x96.png?v=1"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://se-short.vercel.app/favicon/favicon.svg?v=1"
    />
    <link rel="shortcut icon"
    href=https://se-short.vercel.app/favicon/favicon.ico?v=1" />
    <link
      rel="apple-touch-icon"
      sizes="180x180"
      href="https://se-short.vercel.app/favicon/apple-touch-icon.png?v=1"
    />
    <link
      rel="manifest"
      href="https://se-short.vercel.app/favicon/site.webmanifest?v=1"
    />
    <style>
      * {
        font-family: "Poppins", serif;
      }
    </style>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="min-h-screen flex flex-col w-full">
    <div class="container mx-auto px-4 py-8 flex-grow">
      <div class="flex flex-col items-center justify-center space-y-8">
        <div class="w-full max-w-md">
          <img
            src="https://www.skilledge.online/wp-content/uploads/2024/12/Asset-8.png"
            alt="Skilledge Logo"
            class="mx-auto w-60 mb-8"
          />
          <div class="bg-white rounded-lg shadow-lg p-6">
            <h1 class="text-2xl font-bold text-center text-[#383838] mb-6">
              URL Shortener By Skill Edge
            </h1>
            <form autocomplete="off" class="space-y-4">
              <div>
                <input
                  id="url"
                  type="url"
                  placeholder="Enter your URL here"
                  class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:border-[#0079ff]"
                />
              </div>
              <button
                type="submit"
                class="w-full bg-[#0079ff] text-white py-2 px-4 rounded-lg hover:bg-blue-600 transition duration-300"
              >
                Shorten URL
              </button>
            </form>
            <div class="mt-4 p-4 bg-gray-100 rounded-lg hidden">
              <p class="text-sm text-gray-600">Shortened URL:</p>
              <div class="flex items-center justify-between mt-2">
                <input
                  id="shortened-url"
                  type="text"
                  readonly
                  class="flex-grow bg-transparent outline-none text-[#383838]"
                />
                <button
                  id="copy"
                  class="ml-2 text-[#0079ff] hover:text-blue-600"
                >
                  Copy
                </button>
              </div>
            </div>
          </div>

          <!-- Performance and Security Cards -->
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mt-8">
            <div class="bg-white rounded-lg shadow-lg p-4">
              <div class="flex items-center mb-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-[#0079ff]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M13 10V3L4 14h7v7l9-11h-7z"
                  />
                </svg>
                <h3 class="text-lg font-semibold ml-2 text-[#383838]">
                  Fast Performance
                </h3>
              </div>
              <p class="text-gray-600 text-sm">
                Lightning-fast URL redirection with minimal latency and optimal
                server response time.
              </p>
            </div>

            <div class="bg-white rounded-lg shadow-lg p-4">
              <div class="flex items-center mb-3">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-6 w-6 text-[#0079ff]"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                >
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"
                  />
                </svg>
                <h3 class="text-lg font-semibold ml-2 text-[#383838]">
                  Secure Links
                </h3>
              </div>
              <p class="text-gray-600 text-sm">
                HTTPS encryption and security checks ensure your shortened URLs
                are safe and reliable.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
    <footer class="bg-[#0079ff] text-white py-6">
      <div class="container mx-auto px-4">
        <div
          class="flex flex-col md:flex-row items-center justify-between text-center md:text-left"
        >
          <div class="mb-4 md:mb-0">
            <p>
              All Rights Reserved Â© 2024 URL Shortener By
              <b><a href="https://www.skilledge.online">Skilledge</a></b
              >. Built by Hafsa Khan Lodhi
            </p>
          </div>
          <div class="flex space-x-4">
            <a
              href="https://www.github.com/hafsalodhi2023"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-[#383838] transition duration-300"
              >GitHub</a
            >
            <a
              href="https://www.skilledge.online"
              target="_blank"
              rel="noopener noreferrer"
              class="text-white hover:text-[#383838] transition duration-300"
              >Website</a
            >
          </div>
        </div>
      </div>
    </footer>
  </body>
  <script>
    const form = document.querySelector("form");
    const shortenedUrlContainer = document.querySelector(".hidden");
    const shortenedUrlInput = document.querySelector("#shortened-url");
    const copyButton = document.querySelector("#copy");

    form.addEventListener("submit", async (e) => {
      e.preventDefault();
      try {
        const url = document.querySelector("#url").value;

        const response = await fetch("https://se-short.vercel.app/url/create", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify({
            url,
          }),
        });
        const data = await response.json();
        shortenedUrlContainer.classList.remove("hidden");
        shortenedUrlInput.value = "https://se-short.vercel.app/" + data.id;
      } catch (error) {
        console.log(error);
      }
    });

    copyButton.addEventListener("click", () => {
      const shortenedUrl = shortenedUrlInput.value;
      navigator.clipboard.writeText(shortenedUrl);
      copyButton.textContent = "Copied!";
      setTimeout(() => {
        copyButton.textContent = "Copy";
      }, 2000);
    });
  </script>
</html>
